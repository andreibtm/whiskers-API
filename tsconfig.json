{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "vitest/globals"],
    "ignoreDeprecations": "6.0",
    "verbatimModuleSyntax": true
  },
  "include": ["src", "tests", "prisma"],
  "exclude": ["node_modules", "dist"]
}